<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/imgViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aboutdesign" />

    <TextView
        android:id="@+id/txtvwAboutApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT :"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/txtvwAppName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My-List is a ToDolist App"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtvwVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.1"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/txtvwDeveloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPER:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.272" />

    <TextView
        android:id="@+id/txtvwDeveloperName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design and Develop by Lesa Siroy "
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.376" />

    <TextView
        android:id="@+id/txtvwCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KoDeGo and Sir Paulo Tipay"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.635" />

    <TextView
        android:id="@+id/txtvwAppreciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="for making this happen"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.717" />

    <TextView
        android:id="@+id/txtvwSpecialThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Special Thanks to:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvwAboutApp"
        app:layout_constraintVertical_bias="0.539" />

    <Button
        android:id="@+id/btnOKAY"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#1E88E5"
        android:text="OK"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>